<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ishaanmalhi.com.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/app1"
            android:id="@+id/button"
            android:textColor="#ffffff"
            android:backgroundTint="#303F9F"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:onClick="generateToast"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/app2"
            android:id="@+id/button2"
            android:textColor="#ffffff"
            android:backgroundTint="#303F9F"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:onClick="generateToast"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/app3"
            android:id="@+id/button3"
            android:textColor="#ffffff"
            android:backgroundTint="#303F9F"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:onClick="generateToast"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/app4"
            android:id="@+id/button4"
            android:textColor="#ffffff"
            android:backgroundTint="#303F9F"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:onClick="generateToast"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/app5"
            android:id="@+id/button5"
            android:textColor="#ffffff"
            android:backgroundTint="#303F9F"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:onClick="generateToast"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:text="@string/capstone"
            android:id="@+id/button6"
            android:textColor="#ffffff"
            android:backgroundTint="#F08C35"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:onClick="generateToast"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>
